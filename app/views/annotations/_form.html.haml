= form_for [annotable, annotable.annotations.build], url: annotable_url, method: :post, :html => { :class => 'comment-form' } do |form|
  .form-input
    = form.text_area :comment, class: :span8
    = form.hidden_field :parent_id, :value => @annotation.parent_id if @annotation
  = form.submit :Comentar, class: [:btn, 'btn-primary']