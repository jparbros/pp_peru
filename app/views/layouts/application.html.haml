              .control-label
                = form.label :email
              .controls
                = form.text_field :email
            
            .control-group
              .control-label
                = form.label :password
              .controls
                = form.password_field :password

            .control-group
              .control-label
                = form.label 'recordarme', for: 'user_remember_me'
              .controls
                = form.check_box :remember_me

            .control-group
              .controls
                = form.submit :ingresar, class: [:btn, 'btn-primary']


