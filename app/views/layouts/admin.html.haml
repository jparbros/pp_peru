!!! 5
%html
  %head
    %title
      Administracion | PP Peru
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %ul.nav
            %li= link_to 'Centro de Noticias', admin_news_index_path
            %li= link_to 'Centro de Discusiones', admin_discussions_path
            %li= link_to 'Centro de Propuestas', admin_proposals_path
            %li= link_to 'Centro de Entradas', admin_entries_path
    .container
      -flash.each do |name, msg|
        %div{:class =>"alert alert-#{name == :notice ? 'success' : 'error'}"}
          %a{:class => 'close', 'data-dismiss' => 'alert'}x
          = msg
      = yield