!!! 5
%html
  %head
    %title
      Administracion | PP Peru
    = stylesheet_link_tag    "admin", :media => "all"
    = javascript_include_tag "admin"
    = tinymce_assets
    = csrf_meta_tags

  %body
    .container-fluid.nopadding
      .row-fluid
        .span12
          #header
            %a
              PP Peru
            .hright
              .column#userinfo
                %a{class: 'userinfo dropown-toggle', 'data-toggle' => 'dropdown'}
                  %span
                    %strong
                      Admin
                %ul.dropdown-menu
                  %li
                    %a
                      Edit Profile
                  %li.divider
                  %li= link_for_user_login_or_logout

    .container-fluid#container
      .row-fluid
        .span3.leftmenu
          %ul.nav
            %li{class: active_menu?('home')}
              %a{href: "#{admin_root_path}"}
                %span.ico
                  %i.icon-home
                %span.text
                  Dashboard

            %li{class: active_menu?('news')}
              %a{href: ''}
                %span.ico
                  %i.icon-file
                %span.text
                  Centro de Medios
                %span.indicator
              %ul
                - if can? :read, News
                  %li
                    %a{href: "#{admin_news_index_path}"}
                      %span.ico
                        %i.icon-file
                      %span.text Noticias
                - if can? :read, NewsActor
                  %li
                    %a{href: "#{admin_news_actors_path}"}
                      %span.ico
                        %i.icon-file
                      %span.text Actores

            - if can? :read, Discussion
              %li{class: active_menu?('discussions')}
                %a{href: "#{admin_discussions_path}"}
                  %span.ico
                    %i.icon-comment
                  %span.text
                    Centro de Debate
            - if can? :read, Entry
              %li{class: active_menu?('entries')}
                %a{href: "#{admin_entries_path}"}
                  %span.ico
                    %i.icon-book
                  %span.text
                    Centro Educacional

            - if can? :read, Proposal
              %li{class: active_menu?('proposals')}
                %a{href: "#{admin_proposals_path}"}
                  %span.ico
                    %i.icon-eye-open
                  %span.text
                    Propuesta Ciudadana
            - if can? :read, Group
              %li{class: active_menu?('gruops')}
                %a{href: "#{admin_groups_path}"}
                  %span.ico
                    %i.icon-th
                  %span.text
                    Grupos

            - if can? :read, User	
              %li{class: active_menu?('users')}
                %a{href: "#{admin_users_path}"}
                  %span.ico
                    %i.icon-user
                  %span.text
                    Usuarios

            %li{class: active_menu?('gruops')}
              %a{href: "#{admin_groups_path}"}
                %span.ico
                  %i.icon-th
                %span.text
                  Grupos

            %li{class: active_menu?('users')}
              %a{href: "#{admin_users_path}"}
                %span.ico
                  %i.icon-user
                %span.text
                  Usuarios

            %li{class: active_menu?('configurations')}
              %a{href: "#{admin_configuration_path}"}
                %span.ico
                  %i.icon-edit
                %span.text
                  Configuraciones


        #content.span9
          - flash.each do |name, msg|
            %div{:class =>"alert alert-#{name == :notice ? 'success' : 'error'}"}
              %a{:class => 'close', 'data-dismiss' => 'alert'}x
              = msg

          = yield

= tinymce