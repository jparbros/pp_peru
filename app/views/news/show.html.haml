%section#content.span-9
  .blog.single-entry

    %nav.sticky-nav
      %a.twitter{:href => "#", :title => "Share this on Twitter"} Twitter
      %a.facebook{:href => "#", :title => "Share this on Facebook"} Facebook
      %a.googleplus{:href => "#", :title => "Share this on Google Plus"} Google Plus

    %article.entry.has-divider
      %header
        .post-format
          %a{:href => "#"}
        %h2.entry-title
          = link_to @news.title, @news
        .entry-meta
          %span.tags
            Temas:
            %a{:href => "#"} Standard
          %span.comments
            %a{:href => "#comments"} #{@news.annotations_count} Comentarios


      .entry-date
        %span 21
        OCT
      .entry-content
        = @news.content.html_safe

    %section#comments.has-divider
      %a.leave-a-comment{:href => "#comment-form", :title => "Leave a Comment"}
      %h3.comments-title #{@news.annotations_count} Comentarios
      .leave-a-comment-text
        %a.meta{:href => "#comment-form"} Deja un comentario
      %ol.comments-list
        = render partial: 'annotations/annotation', collection: @news.annotations

    %section#comment-form
      %span.leave-a-comment
      %h3.form-title Deja un Comentario
      %span.meta.form-tagline Â¿Que opinas? Usa el formulario para hacernoslo saber.
      = render partial: 'annotations/form', locals: {annotable: @news}


%aside#sidebar.span-3
  = render partial: 'right_aside'