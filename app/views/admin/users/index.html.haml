.row-fluid
	.box
		.box-content
			.page-header
				%h1 Propuesta Ciudadana
				= link_to new_admin_user_path, :class => 'btn-add-resource btn btn-primary' do
					%i.icon-white.icon-plus
					Nuevo Usuario
			%table.table.table-striped.table-bordered
				%thead
					%tr
						%th ID
						%th Email
						%th Nombre
						%th Acciones
				%tbody
					- @users.each do |user|
						%tr
							%td.center= user.id
							%td= user.email
							%td= user.name
							%td
								= link_to edit_admin_user_path(user), :class => 'btn btn-mini btn-primary' do
									%i.icon-edit.icon-white
									Editar
								= link_to admin_user_path(user), :method => :delete, :confirm => 'Esta seguro?', :class => 'btn btn-danger btn-mini' do
									%li.icon-white.icon-remove
									Eliminar