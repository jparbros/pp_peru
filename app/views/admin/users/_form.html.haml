= form_for [:admin, @user], :html => { :class => 'form' } do |f|
  .control-group
    = f.error_messages

  .control-group
    = f.label :email, 'Email:',:class => 'control-label'
    = f.text_field :email, :class => 'text_field'

  .control-group
    = f.label :role, "Role:", class: 'control-label'
    = f.select :role, User.roles_by_user(current_user).collect {|role| [role.humanize, role]}

  .form-actions
    = f.submit @user.new_record? ? 'Crear' : 'Actualizar', :class => 'btn btn-primary'
    = link_to 'Cancelar', admin_users_path, :class => 'btn'
