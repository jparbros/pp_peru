.row-fluid
  .box
    .box-content
      .page-header
        %h1 Grupos
        - if can? :create, Group
          = link_to new_admin_group_path, :class => 'btn-add-resource btn btn-primary' do
            %i.icon-white.icon-plus
            Nuevo Grupo

      %table.table.table-striped.table-bordered
        %thead
          %tr
            %th ID
            %th Grupo
            %th Acciones
        %tbody
          - @groups.each do |group|
            %tr
              %td.center= group.id
              %td= group.name
              %td
                = link_to admin_group_path(group), target: :_blank, :class => 'btn btn-mini' do
                  %i.icon-eye-open
                  Ver
                - if can? :update, Group
                  = link_to edit_admin_group_path(group), :class => 'btn btn-mini btn-primary' do
                    %i.icon-edit.icon-white
                    Editar
                - if can? :destroy, Group
                  = link_to admin_group_path(group), :method => :delete, :confirm => 'Esta seguro?', :class => 'btn btn-danger btn-mini' do
                    %li.icon-white.icon-remove
                    Eliminar
