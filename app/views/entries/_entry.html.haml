%article.entry.has-divider
  %header
    %h2.entry-title
      = link_to entry.title, entrada_path(entry)
    .entry-meta
      %span.tags
        - unless entry.topics.empty?
          Temas:
          - entry.topics.each do |topic| 
            = link_to topic.name, '#'
  .entry-date
    %span= entry.published_day
    = entry.published_month.upcase
  .entry-content
    = entry.first_paragraph.html_safe
    = link_to 'Leer mas...', entrada_path(entry), class: 'more-link'
